#!/hive/sbin/bash
##!/usr/bin/env ash
#export PATH="./:/hive/bin:/hive/sbin:$PATH"

. /hive/bin/asic-model

if [[ $ASIC_MODEL == "Antminer S9k" || $ASIC_MODEL == "Antminer S9 SE" ]]; then
    hostfile="/etc/hosts"
elif [[ $ASIC_MODEL == "Antminer S9" || $ASIC_MODEL =~ "Antminer T9+" || $ASIC_MODEL =~ "Antminer T9" || $ASIC_MODEL =~ "Antminer S10" || $ASIC_MODEL == "Antminer S9i" || $ASIC_MODEL == "Antminer S9j" || $ASIC_MODEL == "Minecenter S9" || $ASIC_MODEL == "Antminer S9 Hydro" || $ASIC_MODEL == "Antminer E3" || $ASIC_MODEL == "Antminer " || $ASIC_MODEL =~ "Antminer S9 (vnish" || $ASIC_MODEL =~ "Antminer S9" || $ASIC_MODEL =~ "Antminer S11" ]]; then
    hostfile="/tmp/hosts"
else
    hostfile="/etc/hosts"
fi

#Recreate. Because of shitty picky bugs
echo "127.0.0.1	localhost.localdomain		localhost" > $hostfile

#adds host ip
#/hive/bin/hostname-check


RIG_CONF="/hive-config/rig.conf"
[ ! -e $RIG_CONF ] && echo "No $RIG_CONF" && exit 1
. $RIG_CONF
[[ -z "$HIVE_HOST_URL" ]] && echo "HIVE_HOST_URL is empty" && exit 1


#Resolves host and writes it to /etc/hosts

SEPARATOR="#HIVE HOST CACHE BEGIN"
#HOST="hiveos.farm"
HOST=`echo $HIVE_HOST_URL | awk -F'://' '{print $2}'`
[[ -z "$HOST" ]] && echo "Unable to parse hostname from $HIVE_HOST_URL" && exit 1

#ent=`getent ahosts $HOST | grep -m 1 STREAM | sed -E 's/(\w+)\s+STREAM\s+(.*)/\1 \2/'`
ent=`nslookup $HOST | sed -n '/\([0-9]\{1,3\}\.\)\{3\}[0-9]\{1,3\}/p' | tail -1 | grep Address | head -n1 | awk -F': ' '{print $2}' | awk '{print $1}'`
for i in {1..30}; do
    [[ $ent != "127.0.0.1" ]] && break
    echo "Waiting for nslookup... $i"
    sleep 2
    ent=`nslookup $HOST | sed -n '/\([0-9]\{1,3\}\.\)\{3\}[0-9]\{1,3\}/p' | tail -1 | grep Address | head -n1 | awk -F': ' '{print $2}' | awk '{print $1}'`
done
[[ -z "$ent" ]] && echo "Unable to lookup $HOST" || ent="$ent $HOST"

echo -e "\n$SEPARATOR" >> $hostfile
if [[ -z "$ent" ]]; then
    echo "Unable to resolve $HOST"
    ent="#Unable to resolve $HOST" #to place this in file
else
    echo "Writing DNS resolve \"$ent\" to /etc/hosts"
fi

echo "$ent" >> $hostfile

sync
